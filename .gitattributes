*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.markdown text eol=lf
*.mdx text eol=lf
LICENSE text eol=lf
README text eol=lf
*.txt text eol=lf

# Config files
.gitignore text eol=lf
